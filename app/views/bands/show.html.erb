<p id="notice"><%= notice %></p>
<div class="flexrow">
  <div class="container-fluid w50">
    <p class="name">
      <strong>Name:</strong>
      <%= @band.name %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @band.user_id %>
    </p>
    <p>
      <strong>Songs:</strong>
    </p>
    <% @songs.each do |song|%>
    <% if song.band_id == @band.id %>
    <%= song.title %>
    -
    <%= song.album %>
    <br>
    <% end %>
    <% end %>
  </div>
  <div class="container-fluid w50">
    <img src="<%= @band.src %>" alt="logo">
  </div>
</div>
<br><br>
<%= link_to 'Edit', edit_band_path(@band) %> |
<%= link_to 'Back', bands_path %>
